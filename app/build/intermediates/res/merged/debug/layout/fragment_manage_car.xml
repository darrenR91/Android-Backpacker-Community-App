<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"

    tools:context="com.k00140908.darren.the88days.UserInputScreens.ManageCarFragment">

    <ProgressBar
        android:id="@+id/car_upload_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/full_advert_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/no_advert_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Car Advert"
        android:id="@+id/button_upload_car"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="343dp"
        android:layout_height="165dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You dont have any car adverts live. \nAll Backpackers are allowed to advertise one vehicle each."
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal|top" />

    </LinearLayout>




<LinearLayout
android:id="@+id/advert_form"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
    android:visibility="gone" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/car_title" />

    <ImageView
        android:id="@+id/carprofilephoto"
        android:src="@drawable/ic_contact_picture"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:fitsSystemWindows="true"/>


</LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/car_description" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:id="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/car_price" />

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Location"-->
                <!--android:textAppearance="@style/TextAppearance.AppCompat.Title"-->
                <!--android:id="@+id/textView13" />-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="New Text"-->
                <!--android:id="@+id/car_location" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available From"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:id="@+id/textView15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/car_date_from" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available To"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:id="@+id/textView17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/car_date_to" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:id="@+id/textView19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/car_contact_number" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>


<android.support.design.widget.FloatingActionButton
android:id="@+id/car_profile_view_fab"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/fab_margin"
android:src="@android:drawable/ic_menu_edit"
app:layout_anchor="@+id/carprofilephoto"
app:layout_anchorGravity="bottom|end"
    android:visibility="gone"/>

    </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>